global
  log /dev/log  local0
  log /dev/log  local1 notice
  stats socket    /tmp/haproxy.sock
  chroot /var/lib/haproxy
  user haproxy
  group haproxy
  daemon

defaults
  log  global
  mode  http
  #option  httplog
  option  dontlognull
  contimeout 5000
  clitimeout 50000
  srvtimeout 50000
  errorfile 400 /etc/haproxy/errors/400.http
  errorfile 403 /etc/haproxy/errors/403.http
  errorfile 408 /etc/haproxy/errors/408.http
  errorfile 500 /etc/haproxy/errors/500.http
  errorfile 502 /etc/haproxy/errors/502.http
  errorfile 503 /etc/haproxy/errors/503.http
  errorfile 504 /etc/haproxy/errors/504.http

listen seahub :80
  mode http
  option httplog
  option dontlognull
  option forwardfor
  {% for node in groups['master'] + groups['clones'] %}
  server seahubserver{{ loop.index }} {{ node }}:80 check port 11001
  {% endfor %}


listen seahub-https :443
  mode tcp
  option tcplog
  option dontlognull
  {% for node in groups['master'] + groups['clones'] %}
  server seahubserver{{ loop.index }} {{ node }}:443 check port 11001
  {% endfor %}

listen ccnetserver :10001
  mode tcp
  option tcplog
  balance leastconn
  {% for node in groups['master'] + groups['clones'] %}
  server seafserver{{ loop.index }} {{ node }}:10001 check port 11001
  {% endfor %}

listen seafserver :12001
  mode tcp
  option tcplog
  balance leastconn
  {% for node in groups['master'] + groups['clones'] %}
  server seafserver{{ loop.index }} {{ node }}:12001 check port 11001
  {% endfor %}

listen monitor :8080
  mode http
  stats enable
  stats uri /
