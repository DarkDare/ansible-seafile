[cluster]
enabled = true
memcached_options = {{ memcached_server }}

[network]
port = {{ seafile_network_port }}

[fileserver]
port = {{ seafile_fileserver_port }}

[database]
type = mysql
host = {{ db_server }}
port = {{ db_port }}
user = {{ db_user }}
password = {{ db_pw }}
db_name = {{ db_seafile }}
connection_charset = utf8

[block_backend]
name = {{ seafile_ceph_name }}
ceph_config = {{ seafile_ceph_config }}
ceph_client_id = {{ seafile_ceph_client_id }}
pool = {{ seafile_ceph_pool_block }}
memcached_options = {{ memcached_server }}

[commit_object_backend]
name = {{ seafile_ceph_name }}
ceph_config = {{ seafile_ceph_config }}
ceph_client_id = {{ seafile_ceph_client_id }}
pool = {{ seafile_ceph_pool_commit }}
memcached_options = {{ memcached_server }}

[fs_object_backend]
name = {{ seafile_ceph_name }}
ceph_config = {{ seafile_ceph_config }}
ceph_client_id = {{ seafile_ceph_client_id }}
pool = {{ seafile_ceph_pool_fs }}
memcached_options = {{ memcached_server }}

